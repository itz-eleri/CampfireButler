<p id="notice"><%= notice %></p>

<h1>Listing Meal Items</h1>

<table>
  <thead>
    <tr>
      <th> title</th>
      <th>Num-serves</th>
      <th>Size-serve</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_items.each do |meal_item| %>
      <tr>
        <td><%= meal_item. title %></td>
        <td><%= meal_item.num-serves %></td>
        <td><%= meal_item.size-serve %></td>
        <td><%= meal_item.comments %></td>
        <td><%= link_to 'Show', meal_item %></td>
        <td><%= link_to 'Edit', edit_meal_item_path(meal_item) %></td>
        <td><%= link_to 'Destroy', meal_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

